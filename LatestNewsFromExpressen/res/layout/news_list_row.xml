<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height" >

    <TextView
        android:id="@+id/news_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:text="@string/app_name_logo"
        android:textColor="#ff000000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/picture_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/news_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/news_row_title"
        android:layout_below="@+id/news_row_title"
        android:text="TextView"
        android:textColor="@color/flat_red" />

    <TextView
        android:id="@+id/news_row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/news_row_time"
        android:layout_alignBottom="@+id/news_row_time"
        android:layout_toRightOf="@+id/news_row_time"
        android:visibility="gone"
        android:text="TextView"
        android:textColor="@color/flat_black" />

</RelativeLayout>
