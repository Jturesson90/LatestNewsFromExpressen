<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height" >

    <TextView
        android:id="@+id/news_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/half_padding"
        android:layout_toRightOf="@+id/news_row_imageView"
        android:text="@string/app_name_logo"
        android:textColor="#ff000000" />

    <ImageView
        android:id="@+id/news_row_imageView"
        android:layout_width="@dimen/image_width"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/half_padding"
        android:src="@drawable/ic_launcher"
        android:visibility="gone" />

    <TextView
        android:id="@+id/news_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/half_padding"
        android:layout_toRightOf="@+id/news_row_imageView"
        android:text="TextView"
        android:textColor="@color/flat_red" />

</RelativeLayout>